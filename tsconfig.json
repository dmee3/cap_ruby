{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/javascript/*"
      ],
      "@atoms/*": [
        "app/javascript/react/design-system/atoms/*"
      ],
      "@molecules/*": [
        "app/javascript/react/design-system/molecules/*"
      ],
      "@organisms/*": [
        "app/javascript/react/design-system/organisms/*"
      ],
      "@templates/*": [
        "app/javascript/react/design-system/templates/*"
      ],
      "@components/*": [
        "app/javascript/react/components/*"
      ],
      "@widgets/*": [
        "app/javascript/react/widgets/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false,
}
