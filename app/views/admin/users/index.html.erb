<% content_for :side_nav do %>
  <%= render 'admin/application/side_nav', page: 'users' %>
<% end %>

<% content_for :main do %>
  <div class="row">
    <div class="col-12 text-right mb-3">
      <%= link_to new_admin_user_path, class: 'btn btn-light mt-1 ml-3' do %>
        <span class="d-none d-sm-inline">New User</span>
        <span class="d-sm-none"><i class="fas fa-plus"></i></span>
      <% end %>
    </div>
  </div>
  <div class="row mt-1 mt-sm-0">
    <div class="col-12" id="member-list">
      <user-list user-type="member"></user-list>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12" id="admin-list">
      <user-list user-type="admin"></user-list>
    </div>
  </div>
</div>
<% end %>

<% content_for :scripts do %>
  <%= javascript_pack_tag 'user_list' %>
<% end %>
