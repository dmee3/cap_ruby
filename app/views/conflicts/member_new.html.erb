<% content_for :styles do %>
  <%= stylesheet_link_tag 'conflicts', media: 'all' %>
<% end %>

<% content_for :main do %>
  <div class="row">
    <div class="col-md-9">
      <h1 class="white-text">New Conflict</h1>
    </div>
    <div class="col-md-3 text-right-md">
      <%= link_to 'All Conflicts', conflicts_path, class: 'btn btn-light red-text align-middle' %>
    </div>
  </div>

  <div class="card">
    <%= form_for @conflict, html: { class: 'card-body' } do |c| %>
      <div class="row align-self-center">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-3 col-lg-2">
              <span class="align-middle">Start:</span>
            </div>
            <div class="col-md-9 col-lg-10 form-inline justify-content-between">
              <%= c.datetime_select :start_date, { ampm: true, datetime_separator: '&nbsp;&nbsp;&nbsp;&nbsp;', time_separator: '' }, { class: 'form-control mr-2 mb-2' } %>
            </div>
          </div>
          <hr class="mt-3 d-md-none">
          <div class="row">
            <div class="col-md-3 col-lg-2">
              <span class="align-middle">End:</span>
            </div>
            <div class="col-md-9 col-lg-10 form-inline justify-content-between">
              <%= c.datetime_select :end_date, { ampm: true, datetime_separator: '&nbsp;&nbsp;&nbsp;&nbsp;', time_separator: '' }, { class: 'form-control mr-2 mb-2' } %>
            </div>
          </div>
          <hr class="mt-3 d-md-none">
        </div>
        <div class="col-md-6 form-group">
          <%= c.text_area :reason, { class: 'form-control mr-2 mb-2', placeholder: 'Reason for Absence' } %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-sm-12 text-center">
          <%= c.submit 'Submit for Review', class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
