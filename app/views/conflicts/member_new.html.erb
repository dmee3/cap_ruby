<% content_for :styles do %>
  <%= stylesheet_link_tag 'conflicts', media: 'all' %>
<% end %>

<% content_for :main do %>
  <div class="row">
    <div class="col-md-9">
      <h1 class="white-text">New Conflict</h1>
    </div>
  </div>

  <div class="card">
    <%= form_for @conflict do |c| %>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-4 col-md-6 form-group">
            <%= c.label :start_date, 'Start' %>
            <%= c.datetime_field :start_date, { class: 'form-control mr-2 mb-2' } %>
            <hr class="mt-3 d-md-none">
          </div>
          <div class="col-lg-4 col-md-6 form-group">
            <%= c.label :end_date, 'End' %>
            <%= c.datetime_field :end_date, { class: 'form-control mr-2 mb-2' } %>
            <hr class="mt-3 d-md-none">
          </div>
          <div class="col-lg-4 form-group">
            <%= c.text_area :reason, { class: 'form-control mr-2 mb-2', placeholder: 'Reason for Absence' } %>
          </div>
        </div>
      </div>

      <div class="card-footer">
        <div class="row">
          <div class="col-12 text-center">
            <p class="lead text-muted">Submitting this conflict <span class="font-italic">does not</span> mean it's approved.<br />Please get in touch with at least one admin and your section coordinator/caption head ASAP to discuss it.</p>
          </div>
          <div class="col-12 text-center">
            <%= c.submit 'Submit for Review', class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
