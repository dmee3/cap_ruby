<div class="card">
  <%= form_for conflict, html: { class: 'card-body container' } do |c| %>
    <div class="row mt-3">
      <div class="col-sm-6 form-group">
        <%= c.collection_select :user_id, @members, :id, :full_name, {}, { class: 'form-control select2-form-control' } %>
      </div>
      <div class="col-sm-6 form-group">
        <%= c.collection_select :status_id, @statuses, :id, :name, {}, { class: 'form-control' } %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="container">
        <div class="row">
          <div class="col-12 col-lg-8">
            <div class="row">
              <div class="col-md-2">
                <span class="align-middle">Start:</span>
              </div>
              <div class="col-md-10 form-inline justify-content-between">
                <%= c.datetime_select :start_date, { ampm: true, datetime_separator: '&nbsp;&nbsp;&nbsp;', time_separator: '' }, { class: 'form-control mr-2 mb-2' } %>
              </div>
            </div>
            <hr class="mt-3 d-md-none">
            <div class="row mt-3">
              <div class="col-md-2">
                <span class="align-middle">End:</span>
              </div>
              <div class="col-md-10 form-inline justify-content-between">
                <%= c.datetime_select :end_date, { ampm: true, datetime_separator: '&nbsp;&nbsp;&nbsp;', time_separator: '' }, { class: 'form-control mr-2 mb-2' } %>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-4">
            <hr class="mt-3 d-md-none">
            <div class="form-group">
              <%= c.text_area :reason, { class: 'form-control mr-2 mb-2', placeholder: 'Reason for Absence' } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-12 form-group text-center">
        <%= c.submit 'Submit', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>