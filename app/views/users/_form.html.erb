<div class="card">
  <%= form_for @user do |u| %>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mt-3 form-group">
          <%= u.text_field :first_name, { class: 'form-control', placeholder: 'First Name' } %>
        </div>
        <div class="col-md-6 mt-3 form-group">
          <%= u.text_field :last_name, { class: 'form-control', placeholder: 'Last Name' } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mt-3 form-group">
          <%= u.text_field :email, { class: 'form-control', placeholder: 'Email' } %>
          <%= u.text_field :section, { class: 'form-control mt-3', placeholder: 'Section' } %>
        </div>
        <div class="col-md-6 mt-3 form-group">
          <%= u.password_field :password, { class: 'form-control', placeholder: 'Password' } %>
          <%= u.password_field :password_confirmation, { class: 'form-control mt-3', placeholder: 'Password Confirmation' } %>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="row">
        <div class="col-md-6 form-group">
          <%= u.label :role_id, 'Role' %>
          <%= u.collection_select :role_id, @roles, :id, :name, {}, { class: 'form-control' } %>
        </div>

        <div class="col-md-6">
          <br />
          <div class="row justify-content-center">
            <%= u.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>