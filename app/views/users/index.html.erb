<% content_for :styles do %>
  <%= stylesheet_link_tag 'users', media: 'all' %>
<% end %>

<% content_for :main do %>
  <div class="row">
    <div class="col-md-6">
      <h1 class="white-text">Users</h1>
    </div>
    <div class="col-md-6">
      <%= form_tag '/users', method: :get, class: 'form-inline pull-right' do %>
        <%= select_tag(:order, options_for_select(@columns), class: 'form-control') %>
        <%= submit_tag 'Sort', class: 'btn btn-info ml-3' %>
        <%= link_to 'New User', new_user_path, class: 'btn btn-success ml-4' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-fill nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active" id="member-tab" data-toggle="tab" href="#members">Members</a>
            </li>
            <li class="nav-item">
              <a class="nav-link info-tab" id="staff-tab" data-toggle="tab" href="#staff">Staff</a>
            </li>
            <li class="nav-item">
              <a class="nav-link info-tab" id="admins-tab" data-toggle="tab" href="#admins">Admins</a>
            </li>
          </ul>
        </div>

        <div class="tab-content">
          <div class="tab-pane fade show active" id="members">
            <%= render 'list_members', users: @members %>
          </div>

          <div class="tab-pane fade" id="staff">
            <%= render 'list_staff', users: @staff %>
          </div>

          <div class="tab-pane fade" id="admins">
            <%= render 'list_admins', users: @admins %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="delete-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-name"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure?</p>
      </div>
      <%= form_tag '/users', method: :delete, id: 'delete-form', class: 'modal-footer' do %>
        
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <%= submit_tag 'Delete', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'users' %>
<% end %>