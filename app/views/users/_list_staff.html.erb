<ul class="list-group list-group-flush">
  <% users.each do |user| %>
    <li class="list-group-item list-group-item-striped">
      <%= user.first_name + ' ' + user.last_name %>
      <span class="float-right">
        <a href="<%= edit_user_path(user) %>">
          <%= fa_icon 'pencil', class: 'icon-btn icon-btn-orange dark-text' %>
        </a>
        &nbsp;&nbsp;&nbsp;
        <%= fa_icon 'trash-o', { class: 'icon-btn icon-btn-red dark-text delete-btn', data: { id: user.id.to_s, name: user.full_name } } %>
      </span>
    </li>
  <% end %>
</ul>