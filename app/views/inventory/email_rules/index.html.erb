<div class="flex flex-col">
  <div class="flex flex-row items-center justify-between mt-4 mb-2">
    <h1>Inventory Email Rules</h1>
    <div>
      <%= link_to new_inventory_email_rule_path, class: 'btn-green btn-lg' do %>
        <svg class="mr-1 h-4 w-4" width="16" height="16" fill="currentColor">
          <path fillRule="evenodd" clipRule="evenodd" d="M6 5a1 1 0 011 1v3h3a1 1 0 110 2H7v3a1 1 0 11-2 0v-3H2a1 1 0 110-2h3V6a1 1 0 011-1z"/>
        </svg>
        New
      <% end %>
    </div>
  </div>
  
  <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-600">
    <thead>
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Item
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Rule
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Mail To
        </th>
        <th scope="col" class="relative px-6 py-3">
          <span class="sr-only">Edit</span>
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-300 dark:divide-gray-600 text-sm">
      <% @rules.each do |rule| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= rule.inventory_item.name %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= display_operator(rule.operator) %> <%= rule.threshold %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap"><%= rule.user.full_name %></td>
          <td>
            <%= link_to 'Edit', edit_inventory_email_rule_path(rule) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
