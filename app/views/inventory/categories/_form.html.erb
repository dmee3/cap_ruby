<%= form_with model: @category, html: { class: 'card-body' } do |f| %>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-12 form-group text-center">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>