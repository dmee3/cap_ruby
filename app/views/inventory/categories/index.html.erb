<% content_for :main do %>
  <div class="row">
    <div class="col-md-9">
      <h1>Inventory</h1>
    </div>
    <div class="col-md-3 text-right-md mb-1">
      <%= link_to new_inventory_category_path, class: 'btn btn-light mt-1' do %>
        <span class="d-none d-sm-inline">New Category</span>
        <span class="d-sm-none"><i class="fas fa-plus"></i></span>
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <div class="card">
        <ul class="list-group list-group-flush">
          <% @categories.each do |category| %>
            <li class="list-group-item list-group-item-action">
              <%= link_to inventory_category_path(category), class: 'd-flex w-100 justify-content-between text-body' do %>
                <span><%= category.name %></span>
                <span>
                </span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
