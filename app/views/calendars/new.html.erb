<% content_for :main do %>
  <div id="form-container" class="content">
    <calendar-donation-form
      :members="<%= @members %>"
      :pk="'<%= @stripe_public_key %>'"
    />
  </div>

  <%= form_with model: @donation, url: '/calendars', method: :post, html: { id: 'calendar-form' } do |f| %>
    <%= f.hidden_field :user_id, id: 'donation_user_id' %>
    <%= f.hidden_field :dates, id: 'donation_dates' %>
    <%= f.hidden_field :amount, id: 'donation_amount' %>
    <%= f.hidden_field :stripe_token, id: 'donation_stripe_token' %>
  <% end %>
<% end %>
