          <%= hidden_field_tag :season_id, s.id, { id: "season_id_#{s.id}" } %>
          <%= submit_tag "#{s.year}", class: 'dropdown-item' %>
        <% end %>
      <% end %>
    </div>
  </li>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" id="more-dropdown" href="#" data-toggle="dropdown">More</a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="more-dropdown">
      <%= link_to 'Settings', settings_path, { class: 'dropdown-item' } %>
      <% if current_user.quartermaster? %>
        <%= link_to 'Inventory', inventory_categories_path, { class: 'dropdown-item' } %>
      <% end %>
      <%= link_to 'Calendar Sponsorships', '/calendars/download', { class: 'dropdown-item' } %>
      <%= link_to 'Whistleblower', whistleblowers_path, { class: 'dropdown-item' } %>
      <%= link_to 'Log Out', logout_path, { class: 'dropdown-item' } %>
