<% content_for :main do %>
  <div class="row">
    <div class="col-md-9">
      <h1>New Conflict</h1>
    </div>
  </div>

  <div class="card">
    <%= form_for @conflict, url: members_conflicts_path do |c| %>
      <div class="card-body">
        <div class="row align-self-center">
          <div class="col-md-6">
            <div class="form-group">
              <label for="conflict_start_date">Start</label>
              <%= c.text_field :start_date, { class: 'flatpickr-dt form-control', required: true } %>
            </div>

            <hr class="mt-3 d-md-none">

            <div class="form-group">
              <label for="conflict_end_date">End</label>
              <%= c.text_field :end_date, { class: 'flatpickr-dt form-control', required: true } %>
            </div>

            <hr class="mt-3 d-md-none">
          </div>
          <div class="col-md-6 form-group">
            <label for="Reason">Reason for Absence</label>
            <%= c.text_area :reason, { class: 'form-control mr-2 mb-2', placeholder: 'Why do you need to miss?', required: true } %>
          </div>
        </div>
      </div>

      <div class="card-footer">
        <div class="row">
          <div class="col-12 text-center">
            <p class="lead text-muted">Submitting this conflict <span class="font-italic">does not</span> mean it's approved.<br />Please get in touch with at least one admin and your section coordinator/caption head ASAP to discuss it.</p>
          </div>
          <div class="col-12 text-center">
            <%= c.submit 'Submit for Review', class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
