<h1>New Conflict</h1>

<%= form_for @conflict, url: members_conflicts_path do |c| %>
  <div class="grid grid-cols-5 gap-x-6 gap-y-4">
    <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
      <%= c.label :start_date, 'Start Date/Time', { class: 'input-label' } %>
    </div>
    <div class="col-span-5 sm:col-span-4 flex items-center">
      <%= c.text_field :start_date, { class: 'flatpickr-dt input-text', required: true } %>
    </div>

    <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
      <%= c.label :end_date, 'End Date/Time', { class: 'input-label' } %>
    </div>
    <div class="col-span-5 sm:col-span-4 flex items-center">
      <%= c.text_field :end_date, { class: 'flatpickr-dt input-text', required: true } %>
    </div>

    <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
      <%= c.label :reason, 'Reason', { class: 'input-label' } %>
    </div>
    <div class="col-span-5 sm:col-span-4 flex flex-col items-center">
      <%= c.text_area :reason, { class: 'input-text', placeholder: 'Why do you need to miss?' } %>
    </div>

    <div class="col-span-5 sm:col-span-4 sm:col-start-2">
      <p class="text-secondary">Submitting this conflict <span class="italic font-normal">does not</span> mean it's approved.<br />Please get in touch with your section coordinator as soon as possible to discuss it.</p>
    </div>
  </div>

  <div class="mt-4 flex flex-row justify-end">
    <%= c.submit 'Submit', class: 'btn-primary btn-lg' %>
  </div>
<% end %>
