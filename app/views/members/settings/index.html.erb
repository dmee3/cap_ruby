<div class="flex flex-col">
  <h1>Settings</h1>
  <h2>Basic Info</h2>
  <%= form_with url: settings_path, method: :post do |f| %>
    <div class="grid grid-cols-5 gap-x-6 gap-y-4">
      <% if @settings_errors %>
        <div class="col-span-5 flex text-red-500 items-center">
          <%= raw(@settings_errors) %>
        </div>
      <% end %>
      <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
        <%= f.label :username, class: 'input-label' %>
      </div>
      <div class="col-span-5 sm:col-span-4">
        <%= text_field_tag :username, current_user.username, class: 'input-text' %>
      </div>

      <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
        <%= f.label :email, class: 'input-label' %>
      </div>
      <div class="col-span-5 sm:col-span-4">
        <%= text_field_tag :email, current_user.email, class: 'input-text' %>
      </div>
    </div>

    <div class="my-4 flex flex-row justify-end">
      <%= f.submit class: 'btn-primary btn-lg' %>
    </div>
  <% end %>

  <h2 class="mt-6">Password</h2>
  <%= form_with url: '/settings-password', method: :post do |f| %>
    <div class="grid grid-cols-5 gap-x-6 gap-y-4">
      <% if @pw_errors %>
        <div class="col-span-5 flex text-red-500 items-center">
          <%= raw(@pw_errors) %>
        </div>
      <% end %>
      <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
        <%= f.label :old_password, class: 'input-label' %>
      </div>
      <div class="col-span-5 sm:col-span-4">
        <%= password_field_tag :old_password, nil, class: 'input-text' %>
      </div>

      <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
        <%= f.label :new_password, class: 'input-label' %>
      </div>
      <div class="col-span-5 sm:col-span-4">
        <%= password_field_tag :new_password, nil, class: 'input-text' %>
      </div>

      <div class="col-span-5 sm:col-span-1 -mb-2 sm:mb-0 flex items-center">
        <%= f.label :new_password_confirmation, 'Confirm', class: 'input-label' %>
      </div>
      <div class="col-span-5 sm:col-span-4">
        <%= password_field_tag :new_password_confirmation, nil, class: 'input-text' %>
      </div>
    </div>

    <div class="my-4 flex flex-row justify-end">
      <%= f.submit class: 'btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
