<div class="flex flex-row justify-center">
  <div class="flex flex-col items-center w-200">
    <h2 class="text-red-500">Wat.</h2>
    <br />
    <p class="text-secondary w-100 text-center">Something happened when sending data to Google Sheets. Sorry, either I suck or Google sucks. Maybe try again and see how it goes?</p>
    <button type="button" class="btn-green btn-lg w-100 mt-2" id="generate-btn">
      Update
    </button>
  </div>
</div>

<% content_for :scripts do %>
  <script type="text/javascript">
    var btn = document.getElementById('generate-btn')
    btn.addEventListener('click', function(event) {
      if (this.disabled) {
        return
      }

      this.disabled = true
      this.classList.add('cursor-not-allowed')
      this.innerHTML = '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Loading...'

      window.location.href = "<%= auditions_spreadsheet_generate_path %>"
    }, false)
  </script>
<% end %>
