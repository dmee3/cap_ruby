<% if status.name == 'Approved' %>
  <span class="w-min bg-green-100 text-green-600 rounded-full text-sm font-medium px-3 py-1">
    <i class="far fa-check-circle mr-1"></i>Approved
  </span>
<% elsif status.name == 'Pending' %>
  <span class="w-min bg-yellow-100 text-yellow-600 rounded-full text-sm font-medium px-3 py-1">
    <i class="far fa-clock mr-1"></i>Pending
  </span>
<% elsif status.name == 'Denied' %>
  <span class="w-min bg-red-100 text-red-600 rounded-full text-sm font-medium px-3 py-1">
    <i class="far fa-times-circle mr-1"></i>Denied
  </span>
<% else %>
  <span class="w-min bg-gray-100 text-gray-600 rounded-full text-sm font-medium px-3 py-1">
    <i class="far fa-dot-circle mr-1"></i>Resolved
  </span>
<% end %>
