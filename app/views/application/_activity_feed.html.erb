<div id="activity-feed">
  <div class="card">
    <template v-for="(activities, day) in days">
      <div class="card-header">
        <h4>{{ day }}</h4>
      </div>
      <ul class="list-group list-group-flush">
        <li v-for="act in days[day]" class="list-group-item">
          <span class="fa-stack">
            <i v-if="act.activity_type == 'payment'" class="fa fa-circle fa-stack-2x text-success"></i>
            <i v-if="act.activity_type == 'payment'" class="fa fa-usd fa-stack-1x fa-inverse"></i>
            <i v-if="act.activity_type == 'conflict'" class="fa fa-circle fa-stack-2x text-warning"></i>
            <i v-if="act.activity_type == 'conflict'" class="fa fa-calendar-o fa-stack-1x fa-inverse"></i>
            <i v-if="act.activity_type == 'login'" class="fa fa-circle fa-stack-2x"></i>
            <i v-if="act.activity_type == 'login'" class="fa fa-fw fa-sign-in fa-stack-1x fa-inverse"></i>
          </span>
          {{ act.description }}
        </li>
      </ul>
    </template>
  </div>
</div>