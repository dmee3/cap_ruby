<div class="list-group-item list-group-item-striped">
  <div class="row">
    <div class="col-6 font-weight-light">
      <%= conflict.start_date.strftime('%a, %-m/%-d %I:%M %p') %><br /><%= conflict.end_date.strftime('%a, %-m/%-d %I:%M %p') %>
    </div>
    <div class="col-6 text-right">
      <%= render 'conflict_status_icon', status: conflict.status %>
      <br />
      <a data-toggle="collapse" href="#conflict-reason-<%= conflict.id %>">
        <%= fa_icon 'comment-o', class: 'dark-text icon-btn icon-btn-blue' %>
      </a>
    </div>
  </div>
  <div class="collapse col-12 px-3 py-1"  id="conflict-reason-<%= conflict.id %>">
    <small class="text-muted"><%= conflict.reason %></small>
  </div>
</div>