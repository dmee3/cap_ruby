<% content_for :main do %>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-xl-4"style="margin-top: 200px;">
      <div class="card">
        <%= form_tag login_path, { class: 'card-body' } do %>
          <div class="form-group">
            <%= text_field_tag :email_or_username, '', { class: 'form-control', placeholder: 'Email or Username', value: @email_or_username } %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, '', { class: 'form-control', placeholder: 'Password' } %>
          </div>
          <div class="row justify-content-center mb-2">
            <%= link_to 'Forgot Password?', '/forgot', class: 'btn btn-outline-info mr-3' %>
            <%= submit_tag 'Log In', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
