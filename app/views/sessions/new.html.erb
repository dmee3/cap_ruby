<% content_for :styles do %>
  <%= stylesheet_link_tag 'sessions', media: 'all' %>
<% end %>

<% content_for :main do %>
  <div class="row justify-content-center">
    <div class="col-md-6 card" style="margin-top: 200px;">
      <%= form_tag login_path, { class: 'card-body' } do %>
        <div class="form-group">
          <%= text_field_tag :email_or_username, '', { class: 'form-control', placeholder: 'Email or Username', value: @email_or_username } %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, '', { class: 'form-control', placeholder: 'Password' } %>
        </div>
        <div class="row justify-content-center">
          <%= submit_tag 'Log In', class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
